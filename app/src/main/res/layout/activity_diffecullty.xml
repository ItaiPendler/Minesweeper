<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ET_Productions.minesweeper.GeneralGameFiles.Difficulty" >

    <TextView
        android:id="@+id/difficulltyChooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Please Choose A Difficullty"
        android:textSize="22sp" />

    <Button
        android:id="@+id/butnBegginer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/difficulltyChooser"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:onClick="onClick"
        android:text="Beginner"
        android:textColor="@android:color/white" 
        android:layout_marginTop = "30dp"
		android:layout_marginBottom = "10dp"
		android:layout_marginRight = "10dp"
		android:layout_marginLeft = "10dp"/>

    <Button
        android:id="@+id/butnMaster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/butnExpert"
        android:layout_alignRight="@+id/butnCustom"
        android:layout_below="@+id/butnExpert"
        android:background="@drawable/button_shape"
        android:onClick="onClick"
        android:text="Master"
        android:textColor="@android:color/white" 
        android:layout_marginTop = "10dp"
		android:layout_marginBottom = "5dp"/>

    <Button
        android:id="@+id/butnCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/butnExpert"
        android:layout_alignRight="@+id/butnExpert"
        android:layout_below="@+id/butnMaster"
        android:background="@drawable/button_shape"
        android:onClick="onClick"
        android:text="Custom"
        android:textColor="@android:color/white"
        android:layout_marginTop = "10dp"
		android:layout_marginBottom = "5dp" />

    <Button
        android:id="@+id/butnExpert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/butnBegginer1"
        android:layout_alignRight="@+id/butnBegginer1"
        android:layout_below="@+id/butnBegginer1"
        android:background="@drawable/button_shape"
        android:onClick="onClick"
        android:text="Expert"
        android:textColor="@android:color/white"
        android:layout_marginTop = "10dp"
		android:layout_marginBottom = "5dp" />

    <TextView
        android:id="@+id/dateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/butnCustom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Enter the Game Difficullty" />

    <EditText
        android:id="@+id/duffuculltySettterTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number"
        android:text="20" />

</RelativeLayout>